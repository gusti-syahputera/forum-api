{
  "name": "forum-api",
  "version": "1.0.1",
  "description": "Submisi Proyek Automation Testing dan Clean Architecture",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "nodemon src/app.js",
    "test": "jest --setupFiles dotenv/config -i",
    "test:watch:change": "jest --watch --setupFiles dotenv/config -i",
    "test:watch": "jest --watchAll --coverage --setupFiles dotenv/config -i",
    "migrate": "node-pg-migrate -f config/database/local.json",
    "migrate:test": "node-pg-migrate -f config/database/test.json"
  },
  "author": "Gusti Ridhoni Syahputera",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "@hapi/jwt": "^2.1.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "instances-container": "^2.0.5",
    "nanoid": "^3.1.30",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.5",
    "node-pg-migrate": "^6.2.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.4"
  }
}
